@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="searchForm">
<fieldset style="margin:0px 0px 2px 0px;display:none;" id="searchPlan">
    <legend>信息查询</legend>
    登录帐号：<input type="text" id="txtUserName" />&nbsp;&nbsp;
    真实姓名：<input type="text" id="txtUserTrueName" />&nbsp;&nbsp;
    所属部门：<input type="text" id="txtDept" />&nbsp;&nbsp;
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" onclick="loadgrid()">查询</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-back" onclick="reset()">清空</a>
</fieldset>
</form>
<div id="grid"></div>
<div id="dialog"></div>

<!--------------------------添加/修改信息的弹出层---------------------------->
<div id="dlgAdd">
    <form id="formAdd">
        <table class="table">
            <tr>
                <th width="120" align="center">登录帐号：</th>
                <td>
                    <input type="hidden" name="UserId" id="UserId" />
                    <input type="text" class="easyui-validatebox" required="true" name="UserName" id="UserName" />
                </td>
            </tr>
            <tr>
                <th align="center">真实姓名：</th>
                <td>
                    <input type="text" class="easyui-validatebox" required="true" name="UserTrueName" id="UserTrueName" />
                </td>
            </tr>
            <tr>
                <th align="center">所属部门：</th>
                <td>
                    <input type="text" class="easyui-validatebox" required="true" name="Dept" id="Dept" />
                </td>
            </tr>
           @* <tr>
                <th align="center">密码：</th>
                <td>
                    <input type="text" class="easyui-validatebox" required="true" name="Password" id="Password" />
                </td>
            </tr>*@
        </table>
    </form>
</div>



@section scripts
{
    <script src="../Content/js/orguser.js" type="text/javascript"></script>
