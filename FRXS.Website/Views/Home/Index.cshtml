@{
    Layout = null;
    ViewBag.Title = @FRXS.Website.Common.SiteConfig.Config.SiteName;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    <link id="themeeasy" href="~/Content/easyui-1.4.3/themes/default/easyui.css" rel="stylesheet" />
</head>
<body class="easyui-layout" style="overflow-y: hidden"  scroll="no">
    <noscript>
        <div style=" position:absolute; width:98%; background:white; text-align:center;">
            <img src="~/Content/images/noscript.gif" alt='抱歉，请开启脚本支持！' />
        </div>
    </noscript>
    <!--#17BA9B-->
    <div region="north" split="true" border="false" style="overflow: hidden; height: 55px; background-color: #20C3EC; background-image: url('Content/images/logos.png');  background-repeat: no-repeat; line-height: 50px;color: #fff; font-family: Verdana, 微软雅黑,黑体">
        <span style="padding-left: 200px; font-size: 28px; font-family: 黑体; color: #ffffff;">机采交通费发放系统</span>
        <span style="float:right; padding-right:20px;padding-top:2px" class="head">
            <a href="javascript:loginOut()">安全退出</a>
        </span>
        <span style="float:right;padding-right:5px; padding-top:2px" class="head">欢迎登录:@ViewBag.UserName</span>
        <span id="bgclock" style="float:right;padding-right:10px; padding-top:2px" class="head"></span>
        
        <div style="float: right; margin-top: 5px">
            <a href="javascript:void(0)" onclick="changeTheme('default')" style="width: 10px; height: 10px; background: #FFE48D; border: 1px solid #95B8E7; display: inline-block;margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('bootstrap')" style="width: 10px; height: 10px; background: #0081C2; border: 1px solid #D4D4D4; display: inline-block; margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('grinder')" style="width: 10px; height: 10px; background: #B83400; border: 1px solid #DDDDDD; display: inline-block; margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('sunny')" style="width: 10px; height: 10px; background: #817865; border: 1px solid #DDDDDD; display: inline-block; margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('gray')" style="width: 10px; height: 10px; background: #0092DC; border: 1px solid #95B8E7; display: inline-block; margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('metro')" style="width: 10px; height: 10px; background: #CCE6FF; border: 1px solid #DDDDDD; display: inline-block; margin-right: 2px;"></a>
            <a href="javascript:void(0)" onclick="changeTheme('cupertino')" style="width: 10px; height: 10px; background: #AED0EA; border: 1px solid #DDDDDD; display: inline-block; margin-right: 2px;"></a>
        </div>
    </div>
    
    <div region="south" split="true" style="height: 30px; background: #D2E0F2;">
        <div class="footer">版权所有&copy;  @FRXS.Website.Common.SiteConfig.Config.COName @FRXS.Website.Common.SiteConfig.Config.Icp </div>
    </div>

    <div region="west" hide="true" split="true" title="导航菜单" style="width:180px;" id="west">
        <div id="nav" class="easyui-accordion" fit="true" border="false">
            <!--  导航内容 -->
        </div>
    </div>

    <!--标签页-->
    <div id="mainPanle" region="center" style="background: #eee; overflow-y:hidden">
        <div id="tabs" class="easyui-tabs"  fit="true" border="false" >
	    </div>
    </div>

    <div id="mm" class="easyui-menu" style="width:150px; display:none">
        <div id="mm-tabupdate">刷新</div>
        <div class="menu-sep"></div>
        <div id="mm-tabclose">关闭</div>
        <div id="mm-tabcloseother">关闭其他</div>
        <div id="mm-tabcloseall">全部关闭</div>
    </div>

 @Scripts.Render("~/Content/easyui")
 <script src="@Url.Content("~/Content/js/base.js")" type="text/javascript"></script>
</body>
</html>
