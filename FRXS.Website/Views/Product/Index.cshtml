@{
    ViewBag.Title = "Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form id="searchForm">
<fieldset style="margin:0px 0px 2px 0px;display:none;" id="searchPlan">
    <legend>信息查询</legend>
    ProductName：<input type="text" id="txtProductName" />&nbsp;&nbsp;
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-search" onclick="loadgrid()">查询</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconCls="icon-back" onclick="reset()">清空</a>
</fieldset>
</form>
<div id="grid"></div>

<!--------------------------添加/修改信息的弹出层---------------------------->
<div id="dlgAdd">
    <form id="formAdd">
        <table class="table">
            <tr>
                <td width="120" align="center">ProductName：</td>
                <td>
                    <input type="hidden" name="Id" id="Id" />
                    <input type="text" class="easyui-validatebox" required="true" name="ProductName" id="ProductName" />
                </td>
            </tr>

        </table>
    </form>
</div>

@section scripts
{
    <script src="../Content/js/product.js" type="text/javascript"></script>
}