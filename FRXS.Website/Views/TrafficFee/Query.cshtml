@{
    ViewBag.Title = "Query";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .table th {
        text-align: right;
    }
</style>

<form id="searchForm">
    <fieldset style="margin: 0px 0px 2px 0px;" id="searchPlan">
        <legend>信息查询</legend>
        <table class="table">
            <tr>
                <th>身份证号码：
                </th>
                <td>
                    <input type="text" id="txtIDCard" style="width: 252px;" />&nbsp;&nbsp;
                </td>
                <th>献血者姓名：
                </th>
                <td>
                    <input type="text" id="txtName" />&nbsp;&nbsp;
                </td>
                <th>淘汰方式：
                </th>
                <td>
                    <select class="easyui-combobox" name="OutReason" id="OutReason" style="width: 100%;" data-options="panelHeight:'auto'">
                        <option value="">--请选择--</option>
                        <option value="体检">体检</option>
                        <option value="采集">采集</option>
                    </select>
                </td>
            </tr>
            <tr>
                <th>创建日期：</th>
                <td>
                    <input onfocus="WdatePicker({dateFmt:'yyyy-MM-dd'})" class="Wdate" name="StartDate" id="StartDate" style="width: 120px" />至<input onfocus="WdatePicker({dateFmt:'yyyy-MM-dd',minDate:'#F{$dp.$D(\'StartDate\')}'})" class="Wdate" name="EndDate" id="EndDate" style="width: 120px" />
                </td>
                <th>采集血量：</th>
                <td>
                    <select class="easyui-combobox" name="CollectionNum" id="CollectionNum" style="width: 144px;" data-options="panelHeight:'auto'">
                        <option value="">--请选择--</option>
                        <option value="0.5-1U">0.5-1U</option>
                        <option value="1.5U">1.5U</option>
                        <option value="2U">2U</option>
                    </select>
                </td>
                <td style="text-align: right;" colspan="2">
                    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-search" onclick="loadgrid()">查询</a>
                    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-back" onclick="reset()">清空</a>
                </td>
            </tr>
        </table>
    </fieldset>
</form>

<div id="grid"></div>

@section scripts
{
    <script src="../Content/js/FileSaver.js"></script>
    <script src="../Content/datepicker/WdatePicker.js"></script>
    <script src="../Content/js/trafficfeeQuery.js" type="text/javascript"></script>
}